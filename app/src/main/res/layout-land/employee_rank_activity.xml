<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:text="@string/tittle"
        android:textColor="#000"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivEmployeeImage"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_height"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvEmployeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="NTWARI SHYAKA AIME" />

    <TextView
        android:id="@+id/tvEmployeeRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000"
        android:textSize="15sp"
        android:text="(IT MANAGER)" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_marginTop="7dp">

        <LinearLayout
            android:id="@+id/llPoor"
            android:layout_width="@dimen/rank_land_width"
            android:layout_height="@dimen/rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_poor">

            <TextView
                android:id="@+id/tvPoor"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poor_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvNimbi"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ni_mbi"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_second_text_margin_top"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAverage"
            android:layout_width="@dimen/rank_land_width"
            android:layout_height="@dimen/rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_average"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:id="@+id/tvAverage"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvIragerageza"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iragerageza"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_second_text_margin_top"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llGood"
            android:layout_width="@dimen/rank_land_width"
            android:layout_height="@dimen/rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_good">

            <TextView
                android:id="@+id/tvExcellent"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvNziza"
                style="@style/VoteTextLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nziza"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/rank_land_second_text_margin_top"

                />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>