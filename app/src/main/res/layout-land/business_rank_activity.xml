<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="110dp"
        android:text="@string/tittle"
        android:textColor="#000"
        android:textSize="30sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/llPoor"
            android:layout_width="@dimen/business_rank_land_width"
            android:layout_height="@dimen/business_rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_poor">

            <TextView
                android:id="@+id/tvPoor"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/poor_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/business_rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvNimbi"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ni_mbi"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/llAverage"
            android:layout_width="@dimen/business_rank_land_width"
            android:layout_height="@dimen/business_rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_average"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp">

            <TextView
                android:id="@+id/tvAverage"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/business_rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvIragerageza"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iragerageza"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llGood"
            android:layout_width="@dimen/business_rank_land_width"
            android:layout_height="@dimen/business_rank_land_height"
            android:orientation="vertical"
            android:background="@drawable/bg_good">

            <TextView
                android:id="@+id/tvExcellent"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_rank_text"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/business_rank_land_first_text_margin_top"

                />

            <TextView
                android:id="@+id/tvNziza"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nziza"
                android:layout_gravity="center"
                android:layout_marginTop="5dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>