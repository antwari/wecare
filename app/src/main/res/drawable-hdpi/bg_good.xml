<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        
    <item android:state_pressed="true">        
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false">
            <stroke android:width="5dp" android:color="#ccc" />
            <solid android:color="#70c656" />
            <size android:height="120dp" android:width="120dp" />
        </shape>   
    </item>
        
    <item>        
        <shape android:innerRadius="0dp" android:shape="ring" android:thicknessRatio="2.0" android:useLevel="false">
            <stroke android:width="5dp" android:color="#ccc" />
            <gradient android:angle="270" android:endColor="#53933f" android:startColor="#70c656" />
            <size android:height="120dp" android:width="120dp" />
        </shape>       
    </item>

</selector>




